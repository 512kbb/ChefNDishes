@model List<ChefNDishes.Models.Chef>
<div class="row text-center">

    <h1 class="display-4">Check out our roster of chefs!</h1>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
            @foreach (var chef in Model)
            {
                <tr>
                    <td>@chef.FirstName @chef.LastName</td>
                    <td>@chef.CalculateAge()</td>
                    <td>@chef.CreatedDishes.Count</td>
                </tr>
            }
        </table>
    </div>
</div>
