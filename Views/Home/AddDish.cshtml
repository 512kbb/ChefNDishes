@model Dish

<div class="container">
    <h1 class="text-center">Add a Dish!</h1>
    <form asp-action="ProcessDish" method="post" asp-controller="Home">
        <div class="row align-items-start">
            <div class="col">
                
                <div class="form-group">
                    <label asp-for="DishName"></label>
                    <input asp-for="DishName" class="form-control" />
                    <span asp-validation-for="DishName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="ChefId"></label>
                    <select asp-for="ChefId">
                        @{
                            foreach (var chef in ViewBag.AllChefs)
                            {
                                <option value=@chef.ChefId>@chef.FirstName @chef.LastName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ChefId" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness">
                        @{
                            for (int i = 1; i <= 5; i++)
                            {
                                <option value=@i>@i</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
            </div>
            
                <input type="submit" value="Add Dish" class="btn btn-secondary mt-2">
            
        </div>

    </form>
</div>