@model Chef
<div class="row text-center">
    <div class="col-2"></div>
    <div class="col-8">
        <h1>Add Chef</h1>
        <form asp-action="AddChef" method="post">

            <div class="form-group row my-1">
                <label asp-for="FirstName" class="col-3 col-form-label"></label>
                <div class="col-9">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group row my-1">
                <label asp-for="LastName" class="col-3 col-form-label"></label>
                <div class="col-9">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName"></span>
                
            </div>
            <div class="form-group row my-1">
                <label asp-for="BirthDate" class="col-3 col-form-label"></label>
                <div class="col-9">
                    <input asp-for="BirthDate" class="form-control" />
                </div>
                <span asp-validation-for="BirthDate"></span>
                
            </div>
            <input type="submit" value="Add Chef">
        </form>
    </div>
    <div class="col-2"></div>

</div>