@model List<ChefNDishes.Models.Dish>
<div class="row text-center">

    <h1 class="display-4">Yum! Check out our tasty dishes!</h1>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
            @foreach (var dish in Model)
            {
                <tr>
                    <td>@dish.DishName</td>
                    <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        </table>
    </div>
</div>
